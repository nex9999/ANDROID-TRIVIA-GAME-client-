<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" xmlns:fbutton="http://schemas.android.com/apk/res-auto">
    <info.hoang8f.widget.FButton
        android:id="@+id/pregunta"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        fbutton:buttonColor="@color/fbutton_color_silver"
        fbutton:shadowColor="@color/fbutton_color_midnight_blue"
        fbutton:shadowEnabled="true"
        fbutton:shadowHeight="5dp"
        fbutton:cornerRadius="7dp"
        android:layout_marginBottom="2dp"
        android:gravity="center"
        android:layout_marginTop="15dp"


        />

    <ListView
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pregunta"
        android:id="@+id/respuestas"
        android:layout_alignParentRight="true"
        android:focusable="false">

    </ListView>

</RelativeLayout>